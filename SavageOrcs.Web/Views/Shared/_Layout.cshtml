@using SavageOrcs.Web.Resources
@using SavageOrcs.Web.Resources.Classes
@inject LanguageService Language
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/jquery.cookie.js"></script>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site-mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/curator/curator.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/curator/curatorAdmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/text/text.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mark/mark.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mark/markAdmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/AdminMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin/keyWordAndPlaces.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/multiselect.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rightScroll.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SavageOrcs.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/css/bootstrap-select.min.css">
</head>
<body>
    <div id="18PlusPopupPlaceholder"></div>
    <div id="adminMenu"></div>
    <script>
        if ($.cookie("userSaw18+Message") !== "YES") {
            $.ajax({
                type: 'POST',
                url: "/Map/Get18PlusPopup",
                contentType: 'application/json; charset=utf-8',
                success: function (src) {
                    $("#18PlusPopupPlaceholder").html(src);
                }
            });
        }
        if ($.cookie("isAdmin") === "thisUserWasInside") {
            $.ajax({
                type: 'POST',
                url: "/Mark/NavigationAdmin",
                contentType: 'application/json; charset=utf-8',
                success: function (src) {
                    $("#adminMenu").html(src);
                }
            });
        }

    </script>
    <header>
        <nav class="burger">
            <div class="menu-line horisontal-line"></div>
            <div class="menu-line horisontal-line"></div>
        </nav>
        <nav class="cross">
            <img src="~/images/main/cross.svg" alt="cross" />
        </nav>
        <a class="logo-text" style="color: #0F0F0F; text-decoration: none" asp-controller="Map" asp-action="Main">Настінні докази</a>
        <partial name="_SideMenu.cshtml" />
    </header>
    <main role="main" class="container-custom">
        @RenderBody()
    </main>
    <footer>
        <div class="d-flex justify-content-between-lg footer-text">
            <div class="footer-main-text">
                СЛІДКУЙТЕ ЗА НАШИМ ПРОЄКТОМ В
                <a href="https://www.instagram.com/xqotax/" style="color: #FF2929">
                    INSTAGRAM
                </a>
            </div>
            <div class="footer-copy-text">Всі права захищено &copy; 2023</div>
        </div>
        <div class="d-flex justify-content-between footer-refernce">
            <div class="teams">
                <div class="team-text">
                    Архів створено командою
                    культурної інституції
                    «Міжвухами»
                </div>
                <div class="reference-images">
                    <a href="https://www.facebook.com/mizhvukhamyfb">
                        <img src="~/images/main/mizhvuhamu.png" alt="Mizhvuhamu" />
                    </a>
                </div>
               
            </div>
            <div class="teams">
                <div class="team-text">
                    Проєкт створено за підтримки програми
                </div>
                <div class="reference-images">
                    <a href="https://www.iwm.at/program/documenting-ukraine">
                        <img src="~/images/main/documentingUkraine.png" alt="Documenting Ukraine" />
                    </a>
                </div>
            </div>
            <div class="teams">
                <div class="team-text">
                    Інформаційний партнер
                </div>
                <div class="reference-images">
                    <img src="~/images/main/Ukraine.png" alt="Ukraine" />

                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/multiselect/multiselect-dropdown.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/js/bootstrap-select.min.js"></script>

    <script>
        $(function () {
            var state = true;
            $(".cross, .burger").on("click", function () {
                if (state) {
                    var clientWidth = window.innerWidth;
                    if (clientWidth > 900){
                        $(".hidden-menu").animate({
                            width: window.innerWidth - 116
                        }, 400);
                    }
                    else if (clientWidth < 450) {
                        $(".hidden-menu").animate({
                            height: (window.innerHeight - 140) * 0.75
                        }, 400);
                    }
                    $(".burger").css({ display: 'none' });
                    $(".cross").css({ display: 'flex' });
                    $(".hidden-menu").css({ display: 'flex' });
                    
                } else {
                    var clientWidth = window.innerWidth;
                    if (clientWidth > 900) {
                        $(".hidden-menu").animate({
                            width: 0
                        }, 400);
                    }
                    else if (clientWidth < 450) {
                        $(".hidden-menu").animate({
                            height: 200
                        }, 400);
                    }

                    $(".burger").css({ display: 'flex' });
                    $(".cross").css({ display: 'none' });
                    
                    setTimeout(function () {
                        $(".hidden-menu").css({ display: 'none' });
                    }, 400);
                }
                state = !state;
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
