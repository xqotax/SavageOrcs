<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SavageOrcs.Web</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/rightScroll.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SavageOrcs.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/css/bootstrap-select.min.css">
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black-custom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Map" asp-action="Main"><img class="logo-image-custom" src="~/images/logo.png"/></a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav flex-grow-1">
                        <div class="nav-item rounded pt-2 px-2">
                            <div class="dropdown">
                                <a href="#" class="dropdown-toggle display-7-custom" style="color: white" data-bs-toggle="dropdown">Пошук</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item display-7-custom" style="color: rgb(4 107 28)" href="/Mark/Catalogue">Міток</a>
                                    <a class="dropdown-item display-7-custom" style="color: rgb(4 107 28)" href="/Cluster/Catalogue">Скупчень</a>
                                    <a class="dropdown-item display-7-custom" style="color: rgb(4 107 28)" href="/Text/Catalogue">Текстів</a>
                                </div>
                            </div>
                        </div>
                        @if (this.User.IsInRole("Admin"))
                        {
                            <div class="nav-item rounded pt-2 px-2">
                                <div class="dropdown">
                                    <a href="#" class="dropdown-toggle display-7-custom" style="color: white" data-bs-toggle="dropdown">Адмінка</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item display-7-custom" style="color: rgb(4 107 28)" href="/Mark/Add">Добавити мітки</a>
                                        <a class="dropdown-item display-7-custom" style="color: rgb(4 107 28)" href="/Cluster/Add">Добавити скупчення</a>
                                        <a class="dropdown-item display-7-custom" style="color: rgb(4 107 28)" href="/Text/Add">Добавити тексти</a>
                                        <a class="dropdown-item display-7-custom" style="color: rgb(4 107 28)" href="/User/Catalogue">Користувачі</a>
                                    </div>
                                </div>
                            </div>
                            
                        }
                        <div class="nav-item rounded px-2">
                            <a class="nav-link display-7-custom" style="color: white" asp-area="" asp-controller="Curator" asp-action="Catalogue">Куратори</a>
                        </div>
                    </div>
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 wraper-custom">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SavageOrcs.Web - <a href="//localhost:7093">Посилання на сайт</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/js/bootstrap-select.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
