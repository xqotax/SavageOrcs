@using SavageOrcs.Web.ViewModels.Mark
@model MarkCatalogueFilters
<div class="row">
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.KeyWord, new { @class = "text-box-custom form-control display-8-custom", @placeholder = "Ключове слово"})
    </div>
    <div class="col-md-3">
        @Html.TextBoxFor(m => m.Area, new { @class = "text-box-custom form-control display-8-custom", @placeholder = "Міста"})
    </div>
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-3">
                <button class="btn btn-dark-custom display-8-custom" id="search">Пошук</button>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <button class="btn btn-dark-custom display-8-custom" id="fullData">Ввімкнути детальний перегляд</button>
    </div>
</div>
<div class="row pt-5">
    <div class="col-md-12"  id="table">

    </div>
</div>


@section Scripts{
    <script>
        var catalogueMarkView = new CatalogueMarkView();

        $(document).ready(function () {
            catalogueMarkView.InitializeControls();
        });
        
    </script>
}