@using SavageOrcs.Web.ViewModels.Curator
@model CuratorViewModels

<link itemprop="url" rel="stylesheet" href="~/css/curator/curators.css" asp-append-version="true" />

<div class="row"><h2 class="text-white-custom">Інформація про активних кураторів проєкту</h2></div>
@for (int i = 0; i < Model.Curators.Length; i++)
{
    if (i % 3 == 0)
    {
        @:<div class="d-flex justify-content-around curator-row">
    }


            <div class="curator-box">
                <div class="curator-box-image">
                    <img class="curator-image" src="@Model.Curators[i].Image">
                </div>
                
                <div class="curator-box-text  text-white-custom">
                    <div class="curator-box-name display-7-custom">
                        @Model.Curators[i].DisplayName
                    </div>
                    <div class="curator-box-description display-8-custom">
                        @Model.Curators[i].Description
                    </div>
                </div>
            </div>

    if (i % 3 == 2 || i + 1 == Model.Curators.Length)
    {
        @:</div>
    }
}
